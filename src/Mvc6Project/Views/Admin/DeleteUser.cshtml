@{
    ViewBag.Title = "DeleteUser";
}

<form asp-controller="Admin" asp-action="DeleteUser" method="post" class="form-horizontal" role="form">
    <div class="form-group">
        Are you sure you want to <i>Delete User</i>?
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Delete User" class="btn btn-default" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" value="Cancel" onclick="location.href='@Url.Action("EditUser", "Admin")'" class="btn btn-default" style="float:left;" />
        </div>
    </div>
</form>
